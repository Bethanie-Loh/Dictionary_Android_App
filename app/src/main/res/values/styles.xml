<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h1">
        <item name="fontFamily">@font/black_italic_merriweather</item>
        <item name="android:textSize">@dimen/thirty_sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="h1_non_italic">
        <item name="fontFamily">@font/black_merriweather</item>
        <item name="android:textSize">@dimen/forty_sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="h2">
        <item name="fontFamily">@font/bold_italic_merriweather</item>
        <item name="android:textSize">@dimen/twenty_four_sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/sixteen_dp</item>
    </style>

    <style name="h2_light">
        <item name="fontFamily">@font/light_merriweather</item>
        <item name="android:textSize">@dimen/twenty_two_sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">@dimen/sixteen_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="common_text_view_title">
        <item name="fontFamily">@font/bold_merriweather</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="common_text_view_text">
        <item name="fontFamily">@font/regular_merriweather</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="inputText">
        <item name="fontFamily">@font/regular_merriweather</item>
        <item name="android:padding">@dimen/ten_dp</item>
        <item name="android:layout_marginBottom">@dimen/twenty_dp</item>
        <item name="android:background">@drawable/input_box</item>
    </style>

    <style name="button">
        <item name="fontFamily">@font/bold_italic_merriweather</item>
        <item name="android:padding">@dimen/ten_dp</item>
        <item name="android:layout_marginBottom">@dimen/twenty_dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/twenty_sp</item>
    </style>
    <style name="tab_text" parent="Widget.Design.TabLayout">
        <item name="fontFamily">@font/bold_italic_merriweather</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabIndicatorColor">@color/light_yellow</item>
        <item name="tabSelectedTextColor">@color/lipstick</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/alert_dialog_bg</item>
    </style>
</resources>